.a-bgColorChange01
	BEFORE_COLOR = #000
	AFTER_COLOR = #FFF

	display block
	position relative
	
	color AFTER_COLOR
	transition 0.3s all ease
	&:hover, &.is-inview
		color BEFORE_COLOR

	&:before, &:after
		content ""
		display block
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		z-index -1

	&:before
		background-color AFTER_COLOR
		transition 0.3s all ease
		
	&:after
		background-color BEFORE_COLOR
		transition 0.3s all ease

	&.is-fade01
		&:hover, &.is-inview
			&:after
				opacity 0
	
	&.is-slideRight01
		overflow hidden
	
		&:hover, &.is-inview
			&:after
				transform translate3d(100%,0,0)

	&.is-slideLeft01
		overflow hidden
		&:hover, &.is-inview
			&:after
				transform translate3d(-100%,0,0)
	
	&.is-slideTop01
		overflow hidden
		&:hover, &.is-inview
			&:after
				transform translate3d(0,-100%,0)
	
	&.is-slideBottom01
		overflow hidden
		&:hover, &.is-inview
			&:after
				transform translate3d(0,100%,0)
	
	&.is-slideCenterIn01
		&:hover, &.is-inview
			&:after
				transform scaleX(0)
	&.is-slideCenterOut01
		&:before
			z-index 0
			transform scaleX(0)
		&:hover, &.is-inview
			&:before
				transform scaleX(1)