/* ベース
---------------------------------- */

html
	height 100%
	font-size 62.5%

body
	-webkit-text-size-adjust: 100%;
	
	// min-width: PC_CT_WID;
	min-width: PC_RES_WID;
	min-height: 100%;
	height: 100%;

	background-color: DF_BG_COLOR;
	color: DF_TEXT_COLOR;

	fontSet();

	input[type="text"], input[type="button"], button, textarea
		margin 0
		padding 0
		background none
		border none
		border-radius 0
		outline none
		-webkit-appearance none
		-moz-appearance none
		appearance none
		resize none

	input[type="text"], select, textarea
		width 100%

	input[type="radio"], input[type="checkbox"]
		margin 0

	input, select, textarea, button
		fontSet();
	
	+MQ_SP(SP_RES_WID)
		min-width: SP_CT_WID;
		width: 100%;

a
	&:link, &:visited
		color: DF_URL_TEXT_COLOR;
		text-decoration: underline;
	&:active
		text-decoration: none
	+HOVER(SP_RES_WID)
		text-decoration: none
	&:focus
		outline none

